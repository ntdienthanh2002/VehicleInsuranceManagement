@model VehicleInsuranceManagement.Models.Customer

<div class="g-4 p-5 customForm">
    <div style="padding-bottom: 3rem;">
        <h4 style="float: left;">My Personal Information</h4>
        <button class="btn btn-secondary btnChangePassword" style="float: right;">Change Password</button>
    </div>

    @using (Html.BeginForm("_PartialUpdatePersonal", "Customers", FormMethod.Post, new { id = "updatePersonal", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(model => model.CustomerID)
        @Html.HiddenFor(model => model.Password)
        @Html.HiddenFor(model => model.ConfirmPassword)
        @Html.HiddenFor(model => model.Status)

        <div class="form-group row">
            @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-md-3 col-sm-4" })
            <div class="col-md-9 col-sm-8">
                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control col-9 ", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group row">
            @Html.LabelFor(model => model.CustomerName, htmlAttributes: new { @class = "control-label  col-md-3 col-sm-4" })
            <div class="col-md-9 col-sm-8">
                @Html.EditorFor(model => model.CustomerName, new { htmlAttributes = new { @class = "form-control col-9 " } })
                @Html.ValidationMessageFor(model => model.CustomerName, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group row">
            @Html.LabelFor(model => model.CustomerADD, htmlAttributes: new { @class = "control-label col-md-3 col-sm-4" })
            <div class="col-md-9 col-sm-8">
                @Html.EditorFor(model => model.CustomerADD, new { htmlAttributes = new { @class = "form-control col-9 " } })
                @Html.ValidationMessageFor(model => model.CustomerADD, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group row">
            @Html.LabelFor(model => model.CustomerPhoneNumber, htmlAttributes: new { @class = "control-label col-md-3 col-sm-4" })
            <div class="col-md-9 col-sm-8">
                @Html.EditorFor(model => model.CustomerPhoneNumber, new { htmlAttributes = new { @class = "form-control col-9 ", @type = "text" } })
                @Html.ValidationMessageFor(model => model.CustomerPhoneNumber, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group row">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-3 col-sm-4" })
            <div class="col-md-9 col-sm-8">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control col-9 " } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group row">
            @Html.LabelFor(model => model.CitizenIdentityCard, htmlAttributes: new { @class = "control-label col-md-3 col-sm-4" })
            <div class="col-md-9 col-sm-8">
                @Html.EditorFor(model => model.CitizenIdentityCard, new { htmlAttributes = new { @class = "form-control col-9 " } })
                @Html.ValidationMessageFor(model => model.CitizenIdentityCard, "", new { @class = "text-danger" })
            </div>
        </div>
        <button class="btn btn-secondary w-100 py-3 btnUpdate" style="margin-top: 1rem;" type="button">Update</button>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}