@model VehicleInsuranceManagement.Models.Vehicle

<div class="g-4 p-5 customForm">
    @using (Html.BeginForm("_PartialAddVehicle", "Vehicles", FormMethod.Post, new { id = "addVehicle", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group row">
            <label class="col-md-3 col-sm-4" for="vehicleType" style="display: flex; align-items: center; padding-right: 6px;">Vehicle Type</label>
            <div class="col-md-9 col-sm-8">
                @Html.DropDownListFor(model => model.VehicleTypeID, null, "--Select--", htmlAttributes: new { @class = "form-select col-9 border-0", title = "Select Feature", required = "required" })
                @Html.ValidationMessageFor(model => model.VehicleTypeID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-3 col-sm-4" for="vehicleBrand" style="display: flex; align-items: center; padding-right: 6px;">Brand</label>
            <div class="col-md-9 col-sm-8">
                @Html.DropDownList("VehicleBrandID", null, "--Select--", htmlAttributes: new { @class = "form-select col-9 border-0" })
                @Html.ValidationMessageFor(model => model.VehicleModel.VehicleBrandID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-3 col-sm-4" for="vehicleModel" style="display: flex; align-items: center; padding-right: 6px;">Model</label>
            <div class="col-md-9 col-sm-8">
                @Html.DropDownList("VehicleModelID", null, "--Select--", htmlAttributes: new { @class = "form-select col-9 border-0" })
                @Html.ValidationMessageFor(model => model.VehicleModelID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-3 col-sm-4" for="vehicleOwner" style="display: flex; align-items: center; padding-right: 6px;">Owner</label>
            <div class="col-md-9 col-sm-8">
                @Html.EditorFor(model => model.VehicleOwnerName, new { htmlAttributes = new { @class = "form-control col-9 border-0" } })
                @Html.ValidationMessageFor(model => model.VehicleOwnerName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-3 col-sm-4" for="vehicleBodyNumber" style="display: flex; align-items: center; padding-right: 6px;">Body Number</label>
            <div class="col-md-9 col-sm-8">
                @Html.EditorFor(model => model.VehicleBodyNumber, new { htmlAttributes = new { @class = "form-control col-9 border-0" } })
                @Html.ValidationMessageFor(model => model.VehicleBodyNumber, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-3 col-sm-4" for="vehicleEngineNumber" style="display: flex; align-items: center; padding-right: 6px;">Engine Number</label>
            <div class="col-md-9 col-sm-8">
                @Html.EditorFor(model => model.VehicleEngineNumber, new { htmlAttributes = new { @class = "form-control col-9 border-0" } })
                @Html.ValidationMessageFor(model => model.VehicleEngineNumber, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-3 col-sm-4" for="vehicleNumber" style="display: flex; align-items: center; padding-right: 6px;">Vehicle Number</label>
            <div class="col-md-9 col-sm-8">
                @Html.EditorFor(model => model.VehicleNumber, new { htmlAttributes = new { @class = "form-control col-9 border-0" } })
                @Html.ValidationMessageFor(model => model.VehicleNumber, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-3 col-sm-4" for="vehicleImage" style="display: flex; align-items: center; padding-right: 6px;">Image</label>
            <div class="col-md-9 col-sm-8">
                <input type="file" name="uploadFile" id="uploadFile" class="form-control-file col-9 border-0" accept=".jpg, .png" style="height: auto; width: 100%;" />
                @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-3 col-sm-4" for="seatNumber" style="display: flex; align-items: center; padding-right: 6px;">Seat Number</label>
            <div class="col-md-9 col-sm-8">
                @Html.DropDownList("SeatNumber", null, "--Select--", htmlAttributes: new { @class = "form-select col-9 border-0" })
                @Html.ValidationMessageFor(model => model.SeatNumber, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="col">
                <button class="btn btn-secondary py-3 w-100 btnBack" style="margin-top: 1rem;" type="button">Back</button>
            </div>
            <div class="col">
                <button class="btn btn-secondary w-100 py-3 btnAdd" style="margin-top: 1rem;" type="button">Add</button>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}