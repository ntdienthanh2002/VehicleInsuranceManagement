@model VehicleInsuranceManagement.Models.Feedback

@{
    ViewBag.Title = "Contact";
}

@{
    if (TempData["AlertMessage"] != null)
    {
        <div class="alert alert-success">
            <strong> @TempData["AlertMessage"]</strong>
        </div>
    }
}

<!-- Page Header Start -->
<div class="container-fluid page-header mb-5 p-0" style="background-image: url(../../img/carousel-bg-1.jpg);">
    <div class="container-fluid page-header-inner py-5">
        <div class="container text-center">
            <h1 class="display-3 text-white mb-3 animated slideInDown">Feedback</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb justify-content-center text-uppercase">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item text-white active" aria-current="page">Feedback</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<!-- Page Header End -->
<!-- Contact Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="text-primary text-uppercase">// Feedback for Service //</h6>
            <h1 class="mb-5">Feedback for Service</h1>
        </div>
        <div class="row g-4">
            <div class="col-md-6">
                <div class="row gy-4">
                    <div class="col-md-12">
                        <div class="bg-light d-flex flex-column justify-content-center p-4">
                            <h5 class="text-uppercase">// Email //</h5>
                            <p class="m-0"><i class="fa fa-envelope-open text-primary me-2"></i>cusc@gmail.com</p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="bg-light d-flex flex-column justify-content-center p-4">
                            <h5 class="text-uppercase">// Phone Number //</h5>
                            <p class="m-0"><i class="fa fa-envelope-open text-primary me-2"></i>0123456789</p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="bg-light d-flex flex-column justify-content-center p-4">
                            <h5 class="text-uppercase">// Address //</h5>
                            <p class="m-0"><i class="fa fa-envelope-open text-primary me-2"></i>01 Ly Tu Trong, Ninh Kieu, Can Tho, Viet Nam</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="wow fadeInUp" data-wow-delay="0.2s">
                    @*<form method="post" action="/Feedbacks/Create">*@
                    @using (Html.BeginForm("Create", "Feedbacks", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="row g-3">
                            <div class="col-12 col-sm-12">

                                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", rows = "10", @placeholder = Html.DisplayNameFor(Model => Model.Description) } })
                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })

                            </div>
                            <div class="col-12">
                                <button class="btn btn-danger w-100 py-3" type="submit">Send Feedback</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Contact End -->
