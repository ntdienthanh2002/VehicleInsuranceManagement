@model VehicleInsuranceManagement.Models.Customer

@{
    ViewBag.Title = "Login";
}

@{
    if (TempData["AlertMessage"] != null)
    {
        <div class="alert alert-success">
            <strong> @TempData["AlertMessage"]</strong>
        </div>
    }
}

<div class="row justify-content-md-center" style="width: 100%">
    <div class="col-md-4">
        <br />
        <div class="card">
            <div class="card-header">
                Login
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-md-0" })
                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <br />
                    <div class="form-group">
                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-0" })
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="submit" name="submit" class="btn btn-primary" value="Login" />
                        @*<a href="">Forgot The Password</a>*@
                    </div>
                }
            </div>
        </div>
    </div>
</div>
