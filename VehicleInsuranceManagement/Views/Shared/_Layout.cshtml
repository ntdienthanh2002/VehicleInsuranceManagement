<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @*@Styles.Render("~/Content/css")*@
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Barlow:wght@600;700&family=Ubuntu:wght@400;500&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet">

    <link href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" rel="stylesheet" />

    <!-- Template Stylesheet -->
    <link href="~/Content/css/style.css" rel="stylesheet">
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!-- Spinner Start -->
    <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Loading~.</span>
        </div>
    </div>
    <!-- Spinner End -->
    <!-- Topbar Start -->
    <div class="container-fluid bg-light p-0">
        <div class="row gx-0 d-none d-lg-flex">
            <div class="col-lg-7 px-5 text-start">
                <div class="h-100 d-inline-flex align-items-center py-3 me-4">
                    <small class="fa fa-map-marker-alt text-primary me-2"></small>
                    <small>01 Ly Tu Trong Road, Ninh Kieu District, Can Tho City</small>
                </div>
                <div class="h-100 d-inline-flex align-items-center py-3">
                    <small class="far fa-clock text-primary me-2"></small>
                    <small>Mon - Fri : 09.00 AM - 09.00 PM</small>
                </div>
            </div>
            <div class="col-lg-5 px-5 text-end">
                <div class="h-100 d-inline-flex align-items-center">
                    @{
                        if (Session["CusID"] != null)
                        {
                            <div class="nav-item dropdown">
                                <a class="text-primary me-1" href="@Url.Action("MyAccount", "Home")">@Session["Username"]</a>
                                <div class="dropdown-menu fade-up m-0" style="z-index:2000; min-width:8rem">
                                    <a class="dropdown-item" href="@Url.Action("MyAccount", "Home")">My Account</a>
                                    <a class="dropdown-item" href="@Url.Action("Logout", "Home")">Logout</a>
                                </div>
                            </div>
                        }
                        else
                        {
                            <a class="text-primary me-1" href="@Url.Action("Login", "Home")">Login</a>
                            <span class="text-primary">/ &nbsp;</span>
                            <a class="text-primary me-1" href="@Url.Action("Register", "Home")">Register</a>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
    <!-- Topbar End -->
    <!-- Navbar Start -->
    <nav class="navbar navbar-expand-lg bg-white navbar-light shadow sticky-top p-0">
        <a href="index.html" class="navbar-brand d-flex align-items-center px-4 px-lg-5">
            <h2 class="m-0 text-primary"><i class="fa fa-car me-3"></i>CUSC</h2>
        </a>
        <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <div class="navbar-nav ms-auto p-4 p-lg-0">
                <a href="@Url.Action("Index", "Home")" class="nav-item nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Home" && ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">Home</a>
                <a href="@Url.Action("About", "Home")" class="nav-item nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "About" ? "active" : "")">About</a>
                <a href="@Url.Action("Index", "InsuranceTypes")" class="nav-item nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "InsuranceTypes" ? "active" : "")">Insurances</a>
                <a href="@Url.Action("Create", "Feedbacks")" class="nav-item nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Create" ? "active" : "")">Feedback</a>
                <a href="@Url.Action("Index", "Feedbacks")" class="nav-item nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Feedbacks" && ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">Testimonials</a>
                <a href="@Url.Action("Contact", "Feedbacks")" class="nav-item nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Contact" ? "active" : "")">Contact</a>
                <a href="@Url.Action("MyAccount", "Home")" class="nav-item nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Home" && ViewContext.RouteData.Values["Action"].ToString() == "MyAccount" ? "active" : "")">My Account</a>
            </div>
            <a href="@Url.Action("Index", "PurchaseInsuranceProcesses")" class="btn btn-primary py-4 px-lg-5 d-none d-lg-block">Get An Insurance<i class="fa fa-arrow-right ms-3"></i></a>
        </div>
    </nav>
    <!-- Navbar End -->
    <div class="">
        @RenderBody()
        <!-- Footer Start -->
        <div class="container-fluid bg-dark text-light footer pt-5 mt-5 wow fadeIn" data-wow-delay="0.1s">
            <div class="container py-5">
                <div class="row g-5">
                    <div class="col-lg-4 col-md-4">
                        <h4 class="text-light mb-4">Site map</h4>
                        <a class="btn btn-link" href="@Url.Action("Index", "Home")">Home</a>
                        <a class="btn btn-link" href="@Url.Action("About", "Home")">About</a>
                        <a class="btn btn-link" href="@Url.Action("Index", "InsuranceTypes")">Insurances</a>
                        <a class="btn btn-link" href="@Url.Action("Create", "Feedbacks")">Feedback</a>
                        <a class="btn btn-link" href="@Url.Action("Index", "Feedbacks")">Testimonials</a>
                        <a class="btn btn-link" href="@Url.Action("Contact", "Feedbacks")">Contact</a>
                        <a class="btn btn-link" href="@Url.Action("MyAccount", "Home")">My Account</a>
                        <a class="btn btn-link" href="@Url.Action("Index", "PurchaseInsuranceProcesses")">Get an Insurance</a>
                    </div>
                    <div class="col-lg-4 col-md-4">
                        <h4 class="text-light mb-4">Opening Hours</h4>
                        <h6 class="text-light">Monday - Friday:</h6>
                        <p class="mb-4">09.00 AM - 09.00 PM</p>
                        <h6 class="text-light">Saturday - Sunday:</h6>
                        <p class="mb-0">09.00 AM - 12.00 PM</p>
                    </div>
                    <div class="col-lg-4 col-md-4">
                        <h4 class="text-light mb-4">Contact Us</h4>
                        <p class="mb-2">
                            <i class="fa fa-map-marker-alt me-3"></i>
                            01 Ly Tu Trong Road, Ninh Kieu District, Can Tho City
                        </p>
                        <p class="mb-2">
                            <i class="fa fa-phone-alt me-3"></i>
                            <a class="color" href="tel:+842923835581"> 0292 383 5581 </a>
                        </p>
                        <p class="mb-2">
                            <i class="fa fa-envelope me-3"></i>
                            <a class="color" href="mailto:cusc@ctu.edu.vn?subject=Vehicle Insurance"> cusc@ctu.edu.vn </a>
                        </p>
                        <div class="d-flex pt-2">
                            <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-twitter"></i></a>
                            <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-facebook-f"></i></a>
                            <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-youtube"></i></a>
                            <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-linkedin-in"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="copyright">
                    <div class="row">
                        <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                            <a class="border-bottom" href="">Vehicle Insurance</a>
                            CUSC &copy; 2022
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Footer End -->
        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>

    @*@Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")*@
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/wow/wow.min.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/waypoints/waypoints.min.js"></script>
    <script src="~/lib/counterup/counterup.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/lib/tempusdominus/js/moment.min.js"></script>
    <script src="~/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="~/lib/tempusdominus/js/tempusdominus-bootstrap-4.js"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/Scripts/js/main.js"></script>
    <script src="~/Scripts/js/purchaseInsuranceScript.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
